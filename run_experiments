source run_functions

DB_KEYS=500000000  # db_bench
YDB_KEYS=50000000  # YCSB

TEST_COMMANDS=0

if [ "$1" == 'dbbench' ]; then
	DURATION=70
	WARM_PERIOD=10
	RESTORE_DBS=1
	NUM_DBS=1
	DB_WORKLOAD=readwhilewriting
	DB_THREADS=9
	NUM_AT=0
	
	atinterval=5

	OUTPUT="plot/exp_db${atinterval}min/dbbench_wwr.out"
	run_generic

	exit 0
fi

if [ "$1" == 'create_ycsb' ]; then
	DURATION=10
	WARM_PERIOD=0
	ROCKSDB_CONFIG="files/rocksdb-6.11-db_bench.options"
	NUM_YDBS=1
	YDB_WORKLOAD="workloada"
	YDB_THREADS=4
	PARAMS="--ydb_create=true"

	run_generic

	exit 0
fi

if [ "$1" == 'ycsb' ]; then
	DURATION=70
	WARM_PERIOD=10
	RESTORE_DBS=1
	NUM_YDBS=1

	atinterval=5
	
	#for YDB_THREADS in 4 6 8 10; do
	for YDB_THREADS in 8; do
		for YDB_WORKLOAD in workloada workloadb; do
			OUTPUT="plot/exp_db${atinterval}min/ycsb_${YDB_WORKLOAD}.out"
			run_generic
		done
	done

	exit 0
fi

if [ "$1" == 'ycsb_db3' ]; then
	DURATION=46
	WARM_PERIOD=1
	RESTORE_DBS=0
	NUM_YDBS=3
	YDB_SLEEP="0#16#31"

	for YDB_THREADS in 4; do
		for YDB_WORKLOAD in workloadb workloada; do
			OUTPUT="plot/exp_ycsb/${1}-threads${YDB_THREADS}_${YDB_WORKLOAD}.out"
			run_generic
		done
	done

	exit 0
fi

function get_at3script() {
	wait="$1"
	instances="$2"
	interval="$3"
	for ((i=0;i<$instances;i++)); do
		jc=$((wait + i*interval))
		echo -n "0:wait;0:write_ratio=0;${jc}m:wait=false"
		for j in 0.1 0.2 0.3 0.5 0.7 1; do
			jc=$((jc + interval*instances))
			echo -n ";${jc}m:write_ratio=$j"
		done
		echo
	done
}

if [ "$1" == 'dbbench_at3' ]; then
	DURATION=160
	WARM_PERIOD=10
	RESTORE_DBS=1
	NUM_DBS=1
	DB_WORKLOAD=readwhilewriting
	DB_THREADS=9
	NUM_AT=4
	AT_PARAMS="--flush_blocks=0 --random_ratio=0.5 --wait --direct_io"
	atinterval=5
	AT_SCRIPT=`get_at3script 20 $NUM_AT $atinterval |paste -s -d'#'`
	#echo $AT_SCRIPT
	#exit 0

	for AT_BLOCK_SIZE in 512 4 8 16; do
		OUTPUT="plot/exp_db${atinterval}min/dbbench_wwr,at3_bs${AT_BLOCK_SIZE}_directio.out"
		run_generic
	done

	exit 0
fi

if [ "$1" == 'ycsb_at3' ]; then
	DURATION=160
	WARM_PERIOD=10
	RESTORE_DBS=1
	NUM_YDBS=1
	YDB_THREADS=8
	NUM_AT=4
	AT_PARAMS="--flush_blocks=0 --random_ratio=0.5 --wait --direct_io"
	atinterval=5
	AT_SCRIPT=`get_at3script 20 $NUM_AT $atinterval |paste -s -d'#'`
	#echo $AT_SCRIPT
	#exit 0

	#for AT_BLOCK_SIZE in 512 4 8 16; do
	for AT_BLOCK_SIZE in 16 32; do
		for YDB_WORKLOAD in workloada workloadb; do
			OUTPUT="plot/exp_db${atinterval}min/ycsb_${YDB_WORKLOAD},at3_bs${AT_BLOCK_SIZE}_directio.out"
			run_generic
		done
	done

	exit 0
fi

if [ "$1" == 'mw_per_threads_writeratio' ]; then
	DURATION=61
	WARM_PERIOD=1
	RESTORE_DBS=0
	NUM_DBS=1
	DB_WORKLOAD=mixedworkload

	loop_threads="20 25 30 10 15"
	for DB_THREADS in $loop_threads; do
		DB_WORKLOADSCRIPT="writeratio=0.05;16m:writeratio=0.1;31m:writeratio=0.2;46m:writeratio=0.5"
		OUTPUT="plot/exp_mw/${1}-dbs${NUM_DBS}_threads${DB_THREADS}.out"
		run_generic
	done

	exit 0
fi

if [ "$1" == 'rrwr_dbs1' ]; then
	TEST_COMMANDS=0
	DURATION=16
	WARM_PERIOD=1
	RESTORE_DBS=0
	NUM_DBS=1
	DB_WORKLOAD=readrandomwriterandom

	for DB_THREADS in 20; do
		for readwritepercent in 5 10 20 50; do
			PARAMS="--db_readwritepercent=$readwritepercent"
			OUTPUT="plot/exp_rrwr/${1}-threads${DB_THREADS}_writeratio${readwritepercent}.out"
			run_generic
		done
	done

	exit 0
fi

if [ "$1" == 'fio' ]; then
	TEST_COMMANDS=0

	s=0
	for RW in read randread write randwrite; do
		[ "$RW" == "write" ] || [ "$RW" == "randwrite" ] && s=40
		for BS in 4k 8k 16k 32k 256k 512k; do
			for IODEPTH in 1 2 4 6 8 12 16 20 24 28 32; do
				OUTPUT="plot/exp_fio/${1}-${RW}_bs${BS}_depth${IODEPTH}.out"
				run_fio
				sleep $s
			done
		done
	done

	exit 0
fi
